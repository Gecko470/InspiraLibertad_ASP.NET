@page "{token}"
@model InspiraLibertad.Pages.TokenModel
@{
    ViewData["Title"] = "Token";

}

<h4 class="m-5 text-success">Activa tu cuenta Inspira Libertad</h4>
<hr />

@if (Model.res == 0)
{
    <div class="row">
        <div class="alert alert-danger alert-dismissible fade show col-auto" role="alert">
            <strong>>Ha habido algún error. Cuenta no activada..</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}

else if (Model.res == 1)
{
    <div class="row">
        <div class="alert alert-info alert-dismissible fade show col-auto" role="alert">
            <strong>Cuenta activada correctamente. Ya puedes iniciar sesión..</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}
