@page "{email}"
@model InspiraLibertad.Pages.RecuperarPasswordModel

@{
    ViewData["Title"] = "Recuperar Password";
}

<style>
    body {
        background: url("../img/fondo.png") no-repeat;
        background-size: 120vw;
        background-position: bottom right;
    }
</style>

<div class="row pl-5 pt-3">
    <div class="col-10 col-md-5">
        <h4 class="text-success">Recupera tu Password</h4>
        <hr />
        @if (Model.res == 1)
        {
            <div class="row">
                <div class="alert alert-info alert-dismissible fade show col-auto" role="alert">
                    <strong>Ya puedes iniciar sesión con tu nueva contraseña..</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecuperarPassword.Password" class="control-label"></label>
                <input asp-for="RecuperarPassword.Password" class="form-control" />
                <span asp-validation-for="RecuperarPassword.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecuperarPassword.repitePassword" class="control-label"></label>
                <input asp-for="RecuperarPassword.repitePassword" class="form-control" />
                <span asp-validation-for="RecuperarPassword.repitePassword" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
