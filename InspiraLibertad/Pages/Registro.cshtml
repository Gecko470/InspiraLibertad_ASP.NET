@page
@model InspiraLibertad.Pages.RegistroModel

@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        background: url("../img/fondo.png") no-repeat;
        background-size: 120vw;
        background-position: bottom right;
    }
</style>

<div class="row">
    <div class="col-6">
        <h3 class="text-success">Registro</h3>
    </div>
</div>

<div class="row pl-5 pt-3 mt-5">
    <div class="col-10 col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente.NombreUsuario" class="control-label"></label>
                <input asp-for="Cliente.NombreUsuario" class="form-control" />
                <span asp-validation-for="Cliente.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Nombre" class="control-label"></label>
                <input asp-for="Cliente.Nombre" class="form-control" />
                <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Telefono" class="control-label"></label>
                <input asp-for="Cliente.Telefono" class="form-control" />
                <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Password" class="control-label"></label>
                <input asp-for="Cliente.Password" class="form-control" />
                <span asp-validation-for="Cliente.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.repitePassword" class="control-label"></label>
                <input asp-for="Cliente.repitePassword" class="form-control" />
                <span asp-validation-for="Cliente.repitePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
