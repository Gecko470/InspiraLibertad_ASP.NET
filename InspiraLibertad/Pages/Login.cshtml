@page
@model InspiraLibertad.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: url("../img/fondo.png") no-repeat;
        background-size: 120vw;
        background-position: bottom right;
    }
</style>

<div class="row pl-5 pt-3">
    <div class="col-10 col-md-5">
        <h4 class="text-success">Login</h4>
        <hr />
        @if (Model.res == 0)
        {
            <div class="row">
                <div class="alert alert-info alert-dismissible fade show col-auto" role="alert">
                    <strong>Hemos enviado un email a tu dirección de correo electrónico con un link para que actives tu cuenta Inspira Libertad. Debes activarla para poder iniciar sesión..</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
        else if (Model.res == 1)
        {
            <div class="row">
                <div class="alert alert-danger alert-dismissible fade show col-auto" role="alert">
                    <strong>Revisa tus credenciales. Cliente no registrado en nuestra base de datos con esos datos de acceso..</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login.NombreUsuario" class="control-label"></label>
                <input asp-for="Login.NombreUsuario" class="form-control" />
                <span asp-validation-for="Login.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
        <div class="d-flex justify-content-center">
            <a asp-page="/Password">Recupera tu Password</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
