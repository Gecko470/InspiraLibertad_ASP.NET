@page
@model InspiraLibertad.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
    ViewData["idCliente"] = Model._idCliente;
}

<style>
    body {
        background: url("../img/fondo.png") no-repeat;
        background-size: 120vw;
        background-position: bottom right;
    }
</style>

<div class="row">
    <div class="col-6">
        <h3 class="text-success">Login</h3>
    </div>
</div>

<div class="row pl-5 pt-3 mt-5">
    <div class="col-10 col-md-5">
        <div id="divDanger" style="display: none" class="alert alert-danger">Revisa tu Nombre de Usuario y Constraseña. Cliente no registrado en nuestra base de datos con esas credenciales</div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login.NombreUsuario" class="control-label"></label>
                <input asp-for="Login.NombreUsuario" class="form-control" />
                <span asp-validation-for="Login.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
        <a asp-page="/Password">Recupera tu Password</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>

    if (@ViewData["respuesta"] == 0) {

        document.getElementById("divDanger").style.display = "block";

    }

</script>

}
