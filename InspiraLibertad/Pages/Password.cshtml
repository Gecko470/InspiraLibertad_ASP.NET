@page
@model InspiraLibertad.Pages.PasswordModel

@{
    ViewData["Title"] = "Password";
}

<style>
    body {
        background: url("../img/fondo.png") no-repeat;
        background-size: 120vw;
        background-position: bottom right;
    }
</style>

<div class="row">
    <div class="col-6">
        <h3 class="text-success">Recupera tu Password</h3>
    </div>
</div>

<div class="row pl-5 pt-3 mt-5">
    <div class="col-10 col-md-5">
        <div id="divDanger" style="display: none" class="alert alert-danger">Revisa tu Nombre de Usuario, Email y Teléfono. Cliente no registrado en nuestra base de datos con esas credenciales</div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Contrasenia.NombreUsuario" class="control-label"></label>
                <input asp-for="Contrasenia.NombreUsuario" class="form-control" />
                <span asp-validation-for="Contrasenia.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia.Email" class="control-label"></label>
                <input asp-for="Contrasenia.Email" class="form-control" />
                <span asp-validation-for="Contrasenia.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia.Telefono" class="control-label"></label>
                <input asp-for="Contrasenia.Telefono" class="form-control" />
                <span asp-validation-for="Contrasenia.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Login">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>

    if (@ViewData["respuesta"] == 0) {

        document.getElementById("divDanger").style.display = "block";

    }

</script>
}
