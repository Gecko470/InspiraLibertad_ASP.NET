@page
@model InspiraLibertad.Pages.PasswordModel

@{
    ViewData["Title"] = "Password";
}

<style>
    body {
        background: url("../img/fondo.png") no-repeat;
        background-size: 120vw;
        background-position: bottom right;
    }
</style>

<div class="row pl-5 pt-3">
    <div class="col-10 col-md-5">
        <h4 class="text-success">Recupera tu Password</h4>
        <hr />
        @if (Model.res == 0)
        {
            <div id="divDanger" class="row">
                <div class="alert alert-danger alert-dismissible fade show col-auto" role="alert">
                    <strong>Revisa tu Nombre de Usuario, Email y Teléfono. Cliente no registrado en nuestra base de datos con esas credenciales..</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
        else if(Model.res == 1)
        {
            <div id="divDanger" class="row">
                <div class="alert alert-info alert-dismissible fade show col-auto" role="alert">
                    <strong>Hemos enviado un email a tu dirección de correo electrónico con un link para que recuperes tu contraseña de tu cuenta Inspira Libertad..</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Contrasenia.NombreUsuario" class="control-label"></label>
                <input asp-for="Contrasenia.NombreUsuario" class="form-control" />
                <span asp-validation-for="Contrasenia.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia.Email" class="control-label"></label>
                <input asp-for="Contrasenia.Email" class="form-control" />
                <span asp-validation-for="Contrasenia.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia.Telefono" class="control-label"></label>
                <input asp-for="Contrasenia.Telefono" class="form-control" />
                <span asp-validation-for="Contrasenia.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
